<Window x:Class="GetCHM.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GetCHM" Height="486.4" Width="618" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <Grid>
        <TabControl HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="600" MinHeight="400">
            <TabItem Header="种子链接">
                <StackPanel Background="#FFE5E5E5">
                    <ListBox Height="100" VerticalAlignment="Top" />
                    <TextBox Height="23" ToolTip="输入URL" AllowDrop="False" Width="594" Margin="0, 5" AcceptsReturn="True" />
                    <StackPanel Orientation="Horizontal" Margin="0, 5" >
                        <Button Content="添加" Width="200" Margin="20,0"/>
                        <Button Content="移除" Width="200" Margin="80, 0" Uid="Add" Click="Add"/>
                    </StackPanel >

                </StackPanel>
            </TabItem>
            <TabItem Header="元素选择">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
